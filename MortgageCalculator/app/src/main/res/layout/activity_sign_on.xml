<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/sign_on"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">


        <EditText
            android:id="@+id/username_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="360dp"
            android:layout_marginRight="45dp"
            android:hint="Enter Username"
            android:inputType="text"
            android:textAlignment="textStart" />

        <EditText
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100dp"
            android:layout_marginTop="450dp"
            android:layout_marginRight="100dp"
            android:hint="Enter Password"
            android:inputType="textPassword" />


        <Button
            android:id="@+id/button_sign_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="640dp"
            android:backgroundTint="#2C2C2C"
            android:text="Log In"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/forgot_password_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="590dp"
            android:text="Forgot your password?"
            android:textColor="#000000" />


        <TextView
            android:id="@+id/no_account_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="130dp"
            android:layout_marginTop="710dp"
            android:text="No account?"
            android:textColor="#2C2C2C"
       />

        <TextView
            android:id="@+id/create_account_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="214dp"
            android:layout_marginTop="710dp"
            android:text="Create one"
            android:textColor="#3C7533"
            />
        <ImageView
            android:id="@+id/bottom_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/home_buttons"
            android:layout_marginHorizontal="0dp"

            android:layout_marginVertical="775dp" />


    </RelativeLayout>
</FrameLayout>
